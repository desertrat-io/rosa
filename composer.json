{
    "name": "desertrat-io/rosa",
    "description": "How hard can a framework be?",
    "keywords": [
        "framework",
        "rosa",
        "mvc",
        "cloud",
        "phpframework",
        "php",
        "simple",
        "component",
        "modular",
        "extensible",
        "refactor the internet",
        "app",
        "messaging",
        "untraditional",
        "aws",
        "rackspace",
        "compute",
        "block",
        "storage"
    ],
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Mike Lawson",
            "email": "mike@desertrat.io"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-mbstring": "*",
        "ext-openssl": "*",
        "ext-json": "*",
        "ext-sodium": "*",
        "nesbot/carbon": "^2.0.0",
        "guzzlehttp/guzzle": "^6.3",
        "monolog/monolog": "^1.23"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Rosa\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4":{
            "RosaTest\\": "tests/"
        }
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "php-coveralls/php-coveralls": "^2.1",
        "mockery/mockery": "^1.2",
        "phpunit/phpunit": "^9.4",
        "friendsofphp/php-cs-fixer": "^2.18",
        "squizlabs/php_codesniffer": "^3.5"
    }
}
